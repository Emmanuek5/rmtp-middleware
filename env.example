# RTMP Middleware Configuration

# Server Ports
RTMP_PORT=1935
API_PORT=8080
WEB_PORT=3000
NGINX_PORT=80

# Node Environment
NODE_ENV=production

# API Base URL (for development)
NEXT_PUBLIC_API_URL=http://localhost:8080

# RTMP Server Configuration
RTMP_CHUNK_SIZE=4000
RTMP_MAX_CONNECTIONS=1000

# HLS Configuration
HLS_FRAGMENT_LENGTH=3
HLS_PLAYLIST_LENGTH=60

# Stream Recording (optional)
RECORD_STREAMS=false
RECORD_PATH=/tmp/recordings
